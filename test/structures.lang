use "std.lang";

fn main() {
    let pair = IntPair.new(1, 2);
    println(integer_to_string(IntPair.int1(pair)));
    println(integer_to_string(IntPair.int2(pair)));

    IntPair.int2(pair, 4);
    println(integer_to_string(IntPair.int2(pair)));

    IntPair.reset(pair);

    println(integer_to_string(IntPair.int1(pair)));
    println(integer_to_string(IntPair.int2(pair)));
};

struct IntPair {
    int1: integer;
    int2: integer;
};

fn IntPair.reset(pair: IntPair) {
    IntPair.int1(pair, 0);
    IntPair.int2(pair, 0);
};