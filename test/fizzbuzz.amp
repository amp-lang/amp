use "std.amp";

fn main() {
    let i = 0;

    while (i < 100) {
        i = i + 1;
        let fizzbuzz = fizzbuzz(i);
        println(fizzbuzz);
        if (@not(fizzbuzz.static())) {
            @free(fizzbuzz.pointer(), fizzbuzz.length());
        };
        @free(fizzbuzz, 24);
    };
};

fn fizzbuzz(int: integer): String {
    if ((int % 15) == 0) {
        return "FizzBuzz";
    };
    if ((int % 5) == 0) {
        return "Buzz";
    };
    if ((int % 3) == 0) {
        return "Fizz";
    };
    return integer_to_string(int);
};