use "std.lang";

fn main(arguments: Array) {
    let i: integer = 0;
    while (less(i, Array.length(arguments))) {
        let argument: String = Array.get(arguments, i);
        println(concatenate(argument, concatenate(", size: ", integer_to_string(String.length(argument)))));
        i = add(i, 1);
    };
};